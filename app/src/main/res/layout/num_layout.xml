<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:padding="5dp"
        android:text="一"
        android:id="@+id/jian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="5dp"
        android:id="@+id/num"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="5dp"
        android:text="十"
        android:id="@+id/jia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
